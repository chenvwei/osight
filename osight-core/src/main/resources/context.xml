<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean"> 
		<property name="jndiName">
			<value>java:/jdbc/osight</value> 
		</property> 
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
		<property name="configLocation">
			<value>hibernate-cfg.xml</value>
		</property>
		<property name="entityInterceptor">
			<bean class="com.osight.framework.hibernate.AuditInterceptor" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.format_sql">false</prop>
				<prop key="hibernate.use_outer_join">false</prop>
			</props>
		</property>
	</bean>
	<!-- history start -->
	<bean id="hibernateEventWrapper" class="com.osight.framework.hibernate.HibernateEventWrapper">
    	 <constructor-arg>
            <ref local="sessionFactory"/>
        </constructor-arg>
        <property name="flushEvenetListener"><ref local="flushEventListener"/></property>
        <property name="postUpdateEvenetListener"><ref local="historyEventListener"/></property>
        <property name="postInsertEvenetListener"><ref local="historyEventListener"/></property>
        <property name="postDeleteEvenetListener"><ref local="historyEventListener"/></property>
 	</bean>
 	<bean id="historyEventListener" class="com.osight.history.listener.HistoryEventListener">
        <property name="historyService">
            <ref local="historyService" />
        </property>
    </bean>
    <bean id="flushEventListener" class="com.osight.history.listener.VersionIdFlushEventListener">
    </bean>
    <bean id="historyService" class="com.osight.history.service.HistoryServiceFactory" factory-method="getHistoryService"></bean>
    
	<!-- history end  -->
	
	<bean id="daoInvocationHander" class="java.lang.String">
		<constructor-arg>
			<value>com.osight.framework.hibernate.HibernateDAOInvocationHandler</value>
		</constructor-arg>
	</bean>
	<bean id="dbProvider" class="com.osight.framework.service.HibernateDbProvider">
		<property name="daoInvocationHander">
			<ref local="daoInvocationHander" />
		</property>
	</bean>


	<!-- dao -->
	<bean id="parentDAO" abstract="true">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>

	<bean id="userDAO" class="com.osight.core.dao.impl.UserDAOImpl"
		parent="parentDAO" />
	<bean id="lotteryDAO" class="com.osight.core.dao.impl.LotteryDAOImpl"
		parent="parentDAO" />
	<bean id="albumDAO" class="com.osight.core.dao.impl.AlbumDAOImpl"
		parent="parentDAO" />
	<bean id="articleDAO" class="com.osight.core.dao.impl.ArticleDAOImpl"
		parent="parentDAO" />

</beans>
