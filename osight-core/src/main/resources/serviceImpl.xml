<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="locator" class="com.osight.framework.service.BeanLocator"
		init-method="init">
		<property name="beanFactoryLocatorKey" value="servicelayer-context-account" />
		<property name="factoryLocatorSelector" value="beanRefContext.xml" />
		<property name="dbProviderName" value="dbProvider" />
	</bean>

	<bean id="baseDbService" abstract="true" init-method="create"
		destroy-method="remove">
		<property name="locator">
			<ref local="locator" />
		</property>
	</bean>


	<bean id="userService" class="com.osight.core.service.impl.UserServiceImpl"
		parent="baseDbService" />
	<bean id="lotteryService" class="com.osight.core.service.impl.LotteryServiceImpl"
		parent="baseDbService" />
	<bean id="albumService" class="com.osight.core.service.impl.AlbumServiceImpl"
		parent="baseDbService" />
	<bean id="articleService" class="com.osight.core.service.impl.ArticleServiceImpl"
		parent="baseDbService">
		<property name="userService" ref="userService"></property>
	</bean>
</beans>


